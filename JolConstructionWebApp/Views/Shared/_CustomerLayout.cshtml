<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Construction company located in Buncrana, Co Donegal, 
                                    providing a variety of services such as Extensions, 
                                    New Builds, Renovations, Conservation work and more. 
                                    Contact +353 868554799 or email johnsoloughlin@gmail.com for further details.">
    <title>@ViewData["Title"] - John O'Loughlin Construction</title>
    <link rel="icon" href="favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.8/css/all.css">
</head>
<body>
    <header>
        @if (User.IsInRole(SD.Role_Admin))
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-0" style="background-color: cornflowerblue">
                <div class="container-fluid">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Content Managment
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Post" asp-action="Index">Posts</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        }
    </header>
    <div>
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            <div class="background-image" style="background-image: url('/images/coverPhoto.jpg');">
                <div class="container-fluid center-screen">
                    <div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 col-10 pt-2 pb-2 mt-3 m-3 site-title ">
                        <div class="pb-1 pt-1">
                            <img src="/images/logo-removebg-preview.png" class="img-fluid logo" />
                        </div>
                        <div class="pb-1 pt-1">
                            <h1>JOHN O'LOUGHLIN CONSTRUCTION</h1>
                        </div>
                        <div class="pb-1 pt-1">
                            <i class="fa fa-envelope" aria-hidden="true">
                                <a href="mailto:johnsoloughlin.gmail.com" class="contact-info">
                                    <span class="contact-info">
                                        johnsoloughlin@gmail.com
                                    </span>
                                </a>
                            </i>
                        </div>
                        <div class="pb-1 pt-1">
                            <i class="fa fa-phone-square" aria-hidden="true">
                                <a href="tel:0868554799" class="contact-info">
                                    <span class="contact-info">
                                        +(353) 86 855 4799
                                    </span>
                                </a>
                            </i>
                        </div>
                        <div class="pb-1 pt-1">
                            <i class="bi bi-geo-alt-fill"></i>
                            <span class="contact-info">
                                Buncrana, Co. Donegal
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container pb-1 pt-1 mb-2 mt-2">
                <div class="d-flex justify-content-center align-items-center">
                    <div class="d-flex flex-wrap col-12 btn-group mt-4" role="group">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-lg btn-light mx-1" onclick="btnClick()">
                            <i class="bi bi-house-check"></i>
                            Projects
                        </a>
                        <a href="@Url.Action("Index", "Services")" class="btn btn-lg btn-light mx-1" onclick="btnClick()">
                            <i class="bi bi-hammer"></i>
                            Services
                        </a>
                        @*<a href="@Url.Action("Index", "Contact")" class="btn btn-lg btn-light mx-1" data-target="contact" onclick="btnClick()">
                        <i class="bi bi-telephone"></i> Contact
                        </a>*@
                    </div>
                </div>
            </div>
            @RenderBody()
            @RenderSection("Styles", false)
        </main>
    </div>

    <footer class="border-top pt-1 pb-1 footer text-muted bg-light">
        <div class="text-center">
            <span class="footer-text">&copy; 2023 John O'Loughlin Construction Ltd. All rights reserved</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('.carousel').carousel();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
