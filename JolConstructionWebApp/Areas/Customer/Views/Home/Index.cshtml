@model IEnumerable<Post>
@section Styles {
	<link href="@Url.Content("~/css/homeIndex.css")" rel="stylesheet" type="text/css" />
}

@{
    var coverPhotoPost = Model.FirstOrDefault(
        p => p.Category != null && string.Equals(p.Category.Name, "Cover Photo", StringComparison.OrdinalIgnoreCase));

    var homePageProjectPosts = Model.Where
        (p => p.Category.Name != null && string.Equals(p.Category.Name, "Home Page Project", StringComparison.OrdinalIgnoreCase));
}


<div class="background-image" style="background-image: url('@Url.Content($"~/{coverPhotoPost.ImageUrl}")');">
    <div class="container-fluid center-screen">
        <div class="site-title col-lg-4 col-sm-8 ">
            <h1>John O'Loughlin</h1>
            <p class="son">& Son</p>
            <h1>Construction</h1>
            <div class="email-contact">
                <i class="fa fa-envelope fa-2x" aria-hidden="true">
                    <a href="mailto:johnsoloughlin.gmail.com" class="phone-and-email">johnsoloughlin@gmail.com</a>
                </i>
            </div>
            <div class="phone-contact">
                <i class="fa fa-phone-square fa-2x" aria-hidden="true"> 
                    <span class="phone-and-email">086 855 4799</span>
                </i>
            </div>
        </div>
    </div>
</div>


<div class="container border border-5 pb-5 pt-1 mb-2 mt-2">
    <div class="row justify-content-center">
        <div class="col-12">
            <div>
                <div class="row pt-1">
                    @foreach (var post in homePageProjectPosts)
                    {
                        <div class="card border-0 col-lg-4 pt-3">
                            <img src="@post.ImageUrl" class="w-100"/>
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@post.Title</p>
                                    <p class="card-title text-warning text-center"><b>@post.Description</b></p>
                                </div>
                            </div>
                            <div>
                                <a asp-action="Details" asp-route-postId="@post.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                See More
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

