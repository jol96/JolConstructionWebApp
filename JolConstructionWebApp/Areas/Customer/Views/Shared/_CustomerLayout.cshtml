<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - John O'Loughlin Construction</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JolConstructionWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.8/css/all.css">
</head>
<body>
    <header>
    </header>
    <div>
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            <div class="background-image" style="background-image: url('/images/coverPhoto.jpg');">
                <div class="container-fluid center-screen">
                    <div class="site-title col-lg-4 col-sm-8 ">
                        <h1>John O'Loughlin</h1>
                        <p class="son">& Son</p>
                        <h1>Construction</h1>
                        <div class="email-contact">
                            <i class="fa fa-envelope fa-2x" aria-hidden="true">
                                <a href="mailto:johnsoloughlin.gmail.com" class="phone-and-email">johnsoloughlin@gmail.com</a>
                            </i>
                        </div>
                        <div class="phone-contact">
                            <i class="fa fa-phone-square fa-2x" aria-hidden="true">
                                <span class="phone-and-email">086 855 4799</span>
                            </i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container pb-1 pt-1 mb-2 mt-2">
                <div class="d-flex justify-content-center align-items-center">
                    <div type="button" class="btn-group" role="group">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-light mx-0">
                            <i class="bi bi-house-check"></i> Projects
                        </a>
                    </div>
                    <div type="button" class="btn-group" role="group">
                        <a asp-controller="Services" asp-action="Index" class="btn btn-lg btn-light mx-0">
                            <i class="bi bi-hammer"></i></i> Services
                        </a>
                    </div>
                    <div type="button" class="btn-group" role="group">
                        <a asp-controller="Home" asp-action="Services" class="btn btn-lg btn-light mx-0">
                            <i class="bi bi-telephone"></i> Contact
                        </a>
                    </div>
                </div>
            </div>
            @RenderBody()
            @RenderSection("Styles", false)
        </main>
    </div>

    <footer class="border-top pt-4 pb-4 footer text-muted bg-dark">
        <div class="text-center">
            <a href="https://johnoloughlinconstruction.ie/">www.johnoloughlinconstruction.ie</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('.carousel').carousel();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
